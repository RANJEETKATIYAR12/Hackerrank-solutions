#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int B[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &B[i]);
    }

    int total = 0;
    for (int i = 0; i < n; i++) {
        total += B[i];
    }

    if (total % 2 != 0) {
        printf("NO\n");
        return 0;
    }

    int loaves = 0;
    for (int i = 0; i < n - 1; i++) {
        if (B[i] % 2 != 0) {   // person has odd loaves
            B[i]++;            // give 1 to current
            B[i + 1]++;        // and 1 to next
            loaves += 2;
        }
    }

    printf("%d\n", loaves);
    return 0;
}
